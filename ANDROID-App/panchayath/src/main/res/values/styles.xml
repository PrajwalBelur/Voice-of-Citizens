<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/custom_font</item>
    </style>

    <style name="DrawerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="titleTextColor">@color/white</item>
        <item name="actionOverflowButtonStyle">@style/DotsDarkTheme</item>
        <item name="android:windowBackground">@color/grey</item>
        <item name="android:fontFamily">@font/custom_font</item>
    </style>

    <style name="ProgressStyle">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
        <item name="android:indeterminate">true</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:max">100</item>
        <item name="android:progress">45</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@color/white</item>
    </style>

    <style name="EditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="DotsDarkTheme" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="PhotoButton" parent="Base.Widget.AppCompat.Button.Borderless"></style>

    <style name="ButtonStyle" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="NavDrawer">
        <item name="android:textSize">16sp</item>
        <item name="android:listPreferredItemHeightSmall">50dp</item>
        <item name="listPreferredItemHeightSmall">50dp</item>
    </style>

    <style name="IssuesButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="ComplaintDetailsStyle">
        <item name="android:layout_margin">2dp</item>
    </style>

</resources>
